<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/single_lap_img"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chitiet_tentruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên truyện"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/chitiet_theoai"
            android:layout_below="@id/chitiet_tentruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thể loại"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/doctruyenbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Đọc truyện"
        android:background="#FFEB3B"/>

    <Button
        android:id="@+id/yeuthichbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text="Yêu thích"
        android:background="#B9E91E63"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listchap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>





</LinearLayout>